<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
        bean标签用来配置一个Bean（bean就是对象）
            class属性设置你要配置的Bean的全类名
            id属性设置一个唯一的标识
     -->
    <bean id="p1" class="com.atguigu.bean.Person">
        <!-- property标签配置属性值
                name设置属性名
                value属性设置值
         -->
        <property name="id" value="1" />
        <property name="name" value="国哥又有机会帅了" />
        <property name="age" value="18" />
        <property name="phone" value="18610541354" />
    </bean>

    <bean id="p2" class="com.atguigu.bean.Person">
        <property name="id" value="2"/>
        <property name="name" value="帅"/>
        <property name="age" value="18"/>
        <property name="phone" value="15648796"/>
    </bean>

    <!--constructor-arg 标签
              该标签是自己通过构造器 赋值 ：name 设置构造器的参数名,value 设置 构造器 对应的参数值
       -->
    <bean id="p3" class="com.atguigu.bean.Person">
        <!-- 	Person(Integer id, String name, String phone, Integer age)  -->
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="aaa"/>
        <constructor-arg name="phone" value="123456789"/>
        <constructor-arg name="age" value="18"/>
    </bean>

    <!-- idnex属性设置参数的索引
				0 第一个参数
				1 第二个参数
				…… 以此类推
				n 第n+1个参数
		 -->
    <bean id="p4" class="com.atguigu.bean.Person">
        <constructor-arg index="0" value="4" />
        <constructor-arg index="1" value="bbb"/>
        <constructor-arg index="2" value="123654789"/>
        <constructor-arg index="3" value="22"/>
    </bean>

    <bean id="p5" class="com.atguigu.bean.Person">
        <constructor-arg index="0" value="5" type="java.lang.Integer"/>
        <constructor-arg index="1" value="CCC" type="java.lang.String"/>
        <constructor-arg index="2" value="12" type="java.lang.String"/>
        <constructor-arg index="3" value="22" type="java.lang.Integer"/>
    </bean>

    <!-- p名称空间  -->
    <bean id="p6" class="com.atguigu.bean.Person" p:id="6" p:name="p名称空间" p:age="18" p:phone="1254"/>

    <!-- null 值的 -->
    <bean id="p7" class="com.atguigu.bean.Person">

        <property name="id" value="7"/>
        <property name="name" >
            <null></null>
        </property>
        <property name="age" value="7"/>
    </bean>


</beans>